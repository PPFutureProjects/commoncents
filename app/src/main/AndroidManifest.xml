<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="edu.washington.ischool.commoncents.commoncents">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Main Activity -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Event Activities -->
        <activity
            android:name=".activites.EventSummaryActivity"
            android:theme="@style/EventsTheme"/>
        <activity
            android:name=".activites.SplitCostsActivity"
            android:theme="@style/EventsTheme"/>
        <activity
            android:name=".activites.SplitByItemActivity"
            android:theme="@style/EventsTheme"/>
        <activity
            android:name=".activites.SplitBySumActivity"
            android:theme="@style/EventsTheme"/>

        <!-- Friend Activities -->
        <activity
            android:name=".activites.AddFriendActivity"
            android:theme="@style/FriendsTheme"/>
        <activity
            android:name=".activites.FriendProfileActivity"
            android:theme="@style/FriendsTheme"/>

        <!-- Setting Activities -->
        <activity
            android:name=".activites.LoginActivity"
            android:theme="@style/SettingsTheme"/>
        <activity
            android:name=".activites.SignUpActivity"
            android:theme="@style/SettingsTheme"/>
    </application>

</manifest>