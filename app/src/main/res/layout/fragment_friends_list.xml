<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/FriendsTheme"
    tools:context="edu.washington.ischool.commoncents.commoncents.Fragments.FriendsListFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/friends_list"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/list_item_margin_half"
        android:layout_marginBottom="@dimen/list_item_margin_half" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/fab_margin"
        android:tint="@color/colorMaterialUIWhite"
        app:srcCompat="@android:drawable/ic_input_add" />

</RelativeLayout>
