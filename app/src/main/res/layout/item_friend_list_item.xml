<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_item_min_height"
    android:layout_margin="@dimen/list_padding"
    card_view:cardCornerRadius="@dimen/cardview_default_elevation">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="@dimen/profile_picture_size_in_item"
            android:layout_height="@dimen/profile_picture_size_in_item" />

        <TextView
            android:id="@+id/item_title"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_gravity="start|center_vertical"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Title" />

        <TextView
            android:id="@+id/item_description"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Description"/>

    </LinearLayout>

</android.support.v7.widget.CardView>