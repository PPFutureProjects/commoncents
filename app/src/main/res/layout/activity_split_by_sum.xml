<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.washington.ischool.commoncents.commoncents.Activies.SplitBySumActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/sum_input"
        android:layout_width="172dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="$Sum"
        android:inputType="number"
        android:text="Sum"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="26dp" />

    <Switch
        android:id="@+id/split_equally_switch"
        android:layout_width="123dp"
        android:layout_height="40dp"
        android:text="Split Equally"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="26dp" />

    <Button
        android:id="@+id/done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="436dp" />

    <TextView
        android:id="@+id/total_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total:"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="403dp" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Person"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="137dp" />

    <TextView
        android:id="@+id/total_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="403dp" />

    <EditText
        android:id="@+id/name_input"
        android:layout_width="193dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="81dp" />

    <TextView
        android:id="@+id/sum_label"
        android:layout_width="11dp"
        android:layout_height="20dp"
        android:text="$"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="33dp" />

    <EditText
        android:id="@+id/person_percentage"
        android:layout_width="60dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="235dp"
        tools:layout_editor_absoluteY="81dp" />

    <EditText
        android:id="@+id/person_total"
        android:layout_width="57dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="308dp"
        tools:layout_editor_absoluteY="81dp" />

    <TextView
        android:id="@+id/percent_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        tools:layout_editor_absoluteX="235dp"
        tools:layout_editor_absoluteY="403dp" />


</android.support.constraint.ConstraintLayout>
